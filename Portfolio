  <script>
    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Form: open mail client with prefilled content
    function sendMail(e){
      e.preventDefault();
      const name = document.getElementById('c_name').value.trim();
      const email = document.getElementById('c_email').value.trim();
      const msg = document.getElementById('c_msg').value.trim();
      const subject = encodeURIComponent('رسالة من بورتفوليو: ' + name);
      const body = encodeURIComponent(msg + "\\n\\n" + "من: " + name + " — " + email);
      const mailto = `mailto:youssefhany049@gmail.com?subject=${subject}&body=${body}`;
      document.getElementById('sentMsg').style.display = 'block';
      // يفتح تطبيق البريد
      window.location.href = mailto;
    }
  </script>
